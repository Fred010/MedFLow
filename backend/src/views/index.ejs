<%- include('partials/header') %>
<%- include('partials/navbar') %>

<!-- Hero Section -->
<section class="page-header">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">
                    Welcome to MedFlow
                </h1>
                <p class="lead mb-4">
                    Your trusted platform for seamless healthcare appointments
                </p>
                <% if (!user) { %>
                    <a href="/register" class="btn btn-light btn-lg me-2">
                        <i class="bi bi-person-plus"></i> Get Started
                    </a>
                    <a href="/login" class="btn btn-outline-light btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                <% } else { %>
                    <a href="<%= user.role === 'patient' ? '/doctors' : '/doctor/dashboard' %>" 
                       class="btn btn-light btn-lg">
                        <i class="bi bi-arrow-right-circle"></i> Go to Dashboard
                    </a>
                <% } %>
            </div>
            <div class="col-lg-6 d-none d-lg-block text-center">
                <i class="bi bi-hospital display-1 text-white opacity-75"></i>
            </div>
        </div>
    </div>
</section>

<div class="content-wrapper">
    <div class="container">
        <!-- Features Section -->
        <div class="row mb-5">
            <div class="col-12 text-center mb-4">
                <h2 class="fw-bold">Why Choose MedFlow?</h2>
                <p class="text-muted">Simplifying healthcare appointments for everyone</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-search text-primary" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Find Doctors</h5>
                        <p class="card-text text-muted">
                            Browse through our network of qualified healthcare professionals by specialty
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-calendar-check text-success" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Easy Booking</h5>
                        <p class="card-text text-muted">
                            Schedule appointments with your preferred doctor in just a few clicks
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 text-center p-4">
                    <div class="card-body">
                        <div class="mb-3">
                            <i class="bi bi-bell text-warning" style="font-size: 3rem;"></i>
                        </div>
                        <h5 class="card-title">Real-time Updates</h5>
                        <p class="card-text text-muted">
                            Receive instant email notifications for all appointment updates
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- How It Works Section -->
        <div class="row mb-5">
            <div class="col-12 text-center mb-4">
                <h2 class="fw-bold">How It Works</h2>
                <p class="text-muted">Get started in three simple steps</p>
            </div>
        </div>

        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card h-100 border-primary">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-primary rounded-circle" 
                                  style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                1
                            </span>
                            <h5 class="card-title ms-3 mb-0">Create Account</h5>
                        </div>
                        <p class="card-text text-muted">
                            Register as a patient or doctor with your basic information
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-success">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-success rounded-circle" 
                                  style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                2
                            </span>
                            <h5 class="card-title ms-3 mb-0">Find & Book</h5>
                        </div>
                        <p class="card-text text-muted">
                            Search for doctors by specialty and book your appointment
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card h-100 border-info">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <span class="badge bg-info rounded-circle" 
                                  style="width: 40px; height: 40px; display: flex; align-items: center; justify-content: center; font-size: 1.2rem;">
                                3
                            </span>
                            <h5 class="card-title ms-3 mb-0">Get Confirmation</h5>
                        </div>
                        <p class="card-text text-muted">
                            Receive instant confirmation and reminders via email
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- CTA Section -->
        <% if (!user) { %>
        <div class="row">
            <div class="col-12">
                <div class="card bg-primary text-white text-center p-5">
                    <div class="card-body">
                        <h3 class="fw-bold mb-3">Ready to Get Started?</h3>
                        <p class="lead mb-4">
                            Join thousands of patients and doctors using MedFlow
                        </p>
                        <a href="/register" class="btn btn-light btn-lg">
                            <i class="bi bi-person-plus"></i> Register Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>