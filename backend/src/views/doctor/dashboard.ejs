<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="page-header">
    <div class="container">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-speedometer2"></i> Doctor Dashboard
        </h1>
        <p class="lead">Welcome back, Dr. <%= user.name %>!</p>
    </div>
</section>

<div class="content-wrapper">
    <div class="container">
        <!-- Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card stat-card total">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total</h6>
                                <h2 class="fw-bold mb-0"><%= stats.total %></h2>
                            </div>
                            <i class="bi bi-calendar3 text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card pending">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Pending</h6>
                                <h2 class="fw-bold mb-0"><%= stats.pending %></h2>
                            </div>
                            <i class="bi bi-clock-history text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card approved">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Approved</h6>
                                <h2 class="fw-bold mb-0"><%= stats.approved %></h2>
                            </div>
                            <i class="bi bi-check-circle text-success" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card stat-card declined">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Declined</h6>
                                <h2 class="fw-bold mb-0"><%= stats.declined %></h2>
                            </div>
                            <i class="bi bi-x-circle text-danger" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Appointments Section -->
        <% if (pending.length > 0) { %>
            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle"></i> 
                                Pending Requests (<%= pending.length %>)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Patient</th>
                                            <th>Date & Time</th>
                                            <th>Reason</th>
                                            <th>Requested</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% pending.forEach(appt => { %>
                                            <tr>
                                                <td>
                                                    <strong><%= appt.patient_name %></strong><br>
                                                    <small class="text-muted"><%= appt.patient_email %></small>
                                                </td>
                                                <td>
                                                    <i class="bi bi-calendar3 text-muted me-1"></i>
                                                    <%= new Date(appt.appointment_date).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <small><%= appt.reason.substring(0, 50) %><%= appt.reason.length > 50 ? '...' : '' %></small>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= new Date(appt.created_at).toLocaleDateString() %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <button class="btn btn-sm btn-success me-1" 
                                                            onclick="approveAppointment(<%= appt.id %>)">
                                                        <i class="bi bi-check-circle"></i> Approve
                                                    </button>
                                                    <button class="btn btn-sm btn-danger me-1" 
                                                            onclick="declineAppointment(<%= appt.id %>)">
                                                        <i class="bi bi-x-circle"></i> Decline
                                                    </button>
                                                    <a href="/appointment/<%= appt.id %>" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- All Appointments Section -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check"></i> All Appointments
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <% if (appointments.length === 0) { %>
                            <div class="text-center p-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                                <h5 class="text-muted mt-3">No appointments yet</h5>
                                <p class="text-muted">You will see appointment requests from patients here</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID</th>
                                            <th>Patient</th>
                                            <th>Date & Time</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% appointments.forEach(appt => { %>
                                            <tr>
                                                <td>#<%= appt.id %></td>
                                                <td>
                                                    <strong><%= appt.patient_name %></strong><br>
                                                    <small class="text-muted"><%= appt.patient_email %></small>
                                                </td>
                                                <td>
                                                    <i class="bi bi-calendar3 text-muted me-1"></i>
                                                    <%= new Date(appt.appointment_date).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <% if (appt.status === 'pending') { %>
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-clock"></i> Pending
                                                        </span>
                                                    <% } else if (appt.status === 'approved') { %>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Approved
                                                        </span>
                                                    <% } else if (appt.status === 'declined') { %>
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle"></i> Declined
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/appointment/<%= appt.id %>" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View Details
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    async function approveAppointment(appointmentId) {
        if (!confirm('Are you sure you want to approve this appointment?')) {
            return;
        }

        try {
            const response = await fetch(`/api/appointments/${appointmentId}/approve`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                alert('Appointment approved successfully');
                location.reload();
            } else {
                alert(data.message || 'Failed to approve appointment');
            }
        } catch (error) {
            console.error('Approve error:', error);
            alert('An error occurred. Please try again.');
        }
    }

    async function declineAppointment(appointmentId) {
        if (!confirm('Are you sure you want to decline this appointment?')) {
            return;
        }

        try {
            const response = await fetch(`/api/appointments/${appointmentId}/decline`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (response.ok) {
                alert('Appointment declined');
                location.reload();
            } else {
                alert(data.message || 'Failed to decline appointment');
            }
        } catch (error) {
            console.error('Decline error:', error);
            alert('An error occurred. Please try again.');
        }
    }
</script>

<%- include('../partials/footer') %>