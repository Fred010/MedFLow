<% var user = typeof user !== 'undefined' ? user : null; %>
<footer class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5>
                    <i class="bi bi-heart-pulse-fill"></i> MedFlow
                </h5>
                <p class="text-muted">
                    Streamlining healthcare appointments for better patient care.
                </p>
            </div>
            
            <div class="col-md-4 mb-3">
                <h5>Quick Links</h5>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-light text-decoration-none">Home</a></li>
                    <% if (user) { %>
                        <% if (user.role === 'patient') { %>
                            <li><a href="/doctors" class="text-light text-decoration-none">Find Doctors</a></li>
                            <li><a href="/patient/dashboard" class="text-light text-decoration-none">Dashboard</a></li>
                        <% } else if (user.role === 'doctor') { %>
                            <li><a href="/doctor/dashboard" class="text-light text-decoration-none">Dashboard</a></li>
                        <% } %>
                    <% } else { %>
                        <li><a href="/login" class="text-light text-decoration-none">Login</a></li>
                        <li><a href="/register" class="text-light text-decoration-none">Register</a></li>
                    <% } %>
                </ul>
            </div>
            
            <div class="col-md-4 mb-3">
                <h5>Contact Us</h5>
                <p class="text-muted mb-1">
                    <i class="bi bi-envelope"></i> support@medflow.com
                </p>
                <p class="text-muted mb-1">
                    <i class="bi bi-telephone"></i> +234 (0) 800 123 4567
                </p>
                <div class="mt-3">
                    <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-5"></i></a>
                    <a href="#" class="text-light me-3"><i class="bi bi-twitter fs-5"></i></a>
                    <a href="#" class="text-light me-3"><i class="bi bi-instagram fs-5"></i></a>
                    <a href="#" class="text-light"><i class="bi bi-linkedin fs-5"></i></a>
                </div>
            </div>
        </div>
        
        <hr class="bg-light">
        
        <div class="row">
            <div class="col-md-12 text-center">
                <p class="text-muted mb-0">
                    &copy; <%= new Date().getFullYear() %> MedFlow. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap 5 JS Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- Custom JavaScript -->
<script>
    // Auto-hide alerts after 5 seconds
    document.addEventListener('DOMContentLoaded', function() {
        const alerts = document.querySelectorAll('.alert');
        alerts.forEach(alert => {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 5000);
        });
    });
</script>

</body>
</html>