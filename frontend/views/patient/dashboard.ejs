<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="page-header">
    <div class="container">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-speedometer2"></i> My Dashboard
        </h1>
        <p class="lead">Welcome back, <%= user.name %>!</p>
    </div>
</section>

<div class="content-wrapper">
    <div class="container">
        <!-- Quick Stats -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card stat-card total">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Total Appointments</h6>
                                <h2 class="fw-bold mb-0"><%= appointments.length %></h2>
                            </div>
                            <i class="bi bi-calendar3 text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card stat-card pending">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Pending</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= appointments.filter(a => a.status === 'pending').length %>
                                </h2>
                            </div>
                            <i class="bi bi-clock-history text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card stat-card approved">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-muted mb-2">Approved</h6>
                                <h2 class="fw-bold mb-0">
                                    <%= appointments.filter(a => a.status === 'approved').length %>
                                </h2>
                            </div>
                            <i class="bi bi-check-circle text-success" style="font-size: 2.5rem;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card bg-primary text-white">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="fw-bold mb-2">Need a Doctor?</h4>
                                <p class="mb-0 opacity-75">Browse our network of qualified healthcare professionals</p>
                            </div>
                            <a href="/doctors" class="btn btn-light btn-lg">
                                <i class="bi bi-search"></i> Find Doctors
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Appointments List -->
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check"></i> My Appointments
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <% if (!appointments || appointments.length === 0) { %>
                            <div class="text-center p-5">
                                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                                <h5 class="text-muted mt-3">No appointments yet</h5>
                                <p class="text-muted">Start by finding a doctor and booking your first appointment</p>
                                <a href="/doctors" class="btn btn-primary">
                                    <i class="bi bi-search"></i> Find Doctors
                                </a>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Doctor</th>
                                            <th>Specialty</th>
                                            <th>Date & Time</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% appointments.forEach(appointment => { %>
                                            <tr>
                                                <td>
                                                    <strong>Dr. <%= appointment.doctor_name %></strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        <%= appointment.doctor_specialty %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <i class="bi bi-calendar3 text-muted me-1"></i>
                                                    <%= new Date(appointment.appointment_date).toLocaleString() %>
                                                </td>
                                                <td>
                                                    <% if (appointment.status === 'pending') { %>
                                                        <span class="badge bg-warning">
                                                            <i class="bi bi-clock"></i> Pending
                                                        </span>
                                                    <% } else if (appointment.status === 'approved') { %>
                                                        <span class="badge bg-success">
                                                            <i class="bi bi-check-circle"></i> Approved
                                                        </span>
                                                    <% } else if (appointment.status === 'declined') { %>
                                                        <span class="badge bg-danger">
                                                            <i class="bi bi-x-circle"></i> Declined
                                                        </span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/appointment/<%= appointment.id %>" 
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    <% if (appointment.status === 'pending' || appointment.status === 'approved') { %>
                                                        <button class="btn btn-sm btn-outline-danger" 
                                                                onclick="cancelAppointment(<%= appointment.id %>)">
                                                            <i class="bi bi-x-circle"></i> Cancel
                                                        </button>
                                                    <% } %>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="module">
    async function cancelAppointment(appointmentId) {
        if (!confirm('Are you sure you want to cancel this appointment?')) return;

        try {
            const response = await fetch(`/api/appointments/${appointmentId}`, {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (response.ok) {
                alert('Appointment cancelled successfully');
                location.reload();
            } else {
                alert(data.message || 'Failed to cancel appointment');
            }
        } catch (error) {
            console.error('Cancel error:', error);
            alert('An error occurred. Please try again.');
        }
    }
</script>

<%- include('../partials/footer') %>
