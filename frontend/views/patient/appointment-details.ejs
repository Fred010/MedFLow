<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<section class="page-header">
    <div class="container">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-file-text"></i> Appointment Details
        </h1>
        <p class="lead">View your appointment information</p>
    </div>
</section>

<div class="content-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <!-- Status Alert -->
                <% if (appointment.status === 'pending') { %>
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-clock-history"></i> Pending Approval
                        </h5>
                        <p class="mb-0">Your appointment is waiting for doctor's approval. You will be notified via email once the doctor reviews your request.</p>
                    </div>
                <% } else if (appointment.status === 'approved') { %>
                    <div class="alert alert-success">
                        <h5 class="alert-heading">
                            <i class="bi bi-check-circle"></i> Appointment Confirmed
                        </h5>
                        <p class="mb-0">Your appointment has been approved! Please arrive 10 minutes before your scheduled time.</p>
                    </div>
                <% } else if (appointment.status === 'declined') { %>
                    <div class="alert alert-danger">
                        <h5 class="alert-heading">
                            <i class="bi bi-x-circle"></i> Appointment Declined
                        </h5>
                        <p class="mb-0">Unfortunately, your appointment request was declined. Please book a different time slot or contact the doctor's office.</p>
                    </div>
                <% } %>

                <!-- Appointment Information Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Appointment Information
                        </h5>
                    </div>
                    <div class="card-body p-4">

                        <!-- Appointment ID & Status -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Appointment ID</h6>
                                <p class="fw-bold">#<%= appointment.id %></p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">Status</h6>
                                <p>
                                    <% if (appointment.status === 'pending') { %>
                                        <span class="badge bg-warning fs-6">
                                            <i class="bi bi-clock"></i> Pending
                                        </span>
                                    <% } else if (appointment.status === 'approved') { %>
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-check-circle"></i> Approved
                                        </span>
                                    <% } else if (appointment.status === 'declined') { %>
                                        <span class="badge bg-danger fs-6">
                                            <i class="bi bi-x-circle"></i> Declined
                                        </span>
                                    <% } %>
                                </p>
                            </div>
                        </div>

                        <hr>

                        <!-- Appointment Date & Creation -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-calendar3"></i> Date & Time
                                </h6>
                                <p class="fw-bold">
                                    <%= new Date(appointment.appointment_date).toLocaleDateString('en-US', { 
                                        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
                                    }) %>
                                </p>
                                <p class="text-muted">
                                    <%= new Date(appointment.appointment_date).toLocaleTimeString('en-US', { 
                                        hour: '2-digit', minute: '2-digit' 
                                    }) %>
                                </p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-2">
                                    <i class="bi bi-clock"></i> Created On
                                </h6>
                                <p class="text-muted">
                                    <%= new Date(appointment.created_at).toLocaleString() %>
                                </p>
                            </div>
                        </div>

                        <hr>

                        <!-- Reason for Visit -->
                        <div class="mb-3">
                            <h6 class="text-muted mb-2">
                                <i class="bi bi-file-text"></i> Reason for Visit
                            </h6>
                            <p class="mb-0"><%= appointment.reason %></p>
                        </div>

                    </div>
                </div>

                <!-- Doctor Information Card -->
                <div class="card shadow-lg mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-person-badge"></i> Doctor Information
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="bg-info bg-opacity-10 rounded-circle d-flex justify-content-center align-items-center"
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-person-fill text-info" style="font-size: 2.5rem;"></i>
                                </div>
                            </div>
                            <div class="col">
                                <h4 class="mb-2 fw-bold">Dr. <%= appointment.doctor_name %></h4>
                                <p class="mb-2">
                                    <span class="badge bg-info"><%= appointment.doctor_specialty %></span>
                                </p>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-envelope"></i> <%= appointment.doctor_email %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="card shadow-lg">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-gear"></i> Actions
                        </h5>
                        
                        <div class="d-grid gap-2">
                            <% if (appointment.status === 'pending' || appointment.status === 'approved') { %>
                                <button class="btn btn-danger btn-lg" onclick="cancelAppointment()">
                                    <i class="bi bi-x-circle"></i> Cancel Appointment
                                </button>
                            <% } %>
                            
                            <% if (appointment.status === 'declined') { %>
                                <a href="/doctors" class="btn btn-primary btn-lg">
                                    <i class="bi bi-search"></i> Find Another Doctor
                                </a>
                            <% } %>
                            
                            <a href="/patient/dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
    async function cancelAppointment() {
        if (!confirm('Are you sure you want to cancel this appointment? This action cannot be undone.')) return;

        try {
            const response = await fetch('/api/appointments/<%= appointment.id %>', {
                method: 'DELETE',
                headers: { 'Content-Type': 'application/json' }
            });

            const data = await response.json();

            if (response.ok) {
                alert('Appointment cancelled successfully');
                window.location.href = '/patient/dashboard';
            } else {
                alert(data.message || 'Failed to cancel appointment');
            }
        } catch (error) {
            console.error('Cancel error:', error);
            alert('An error occurred. Please try again.');
        }
    }
</script>

<%- include('../partials/footer') %>
